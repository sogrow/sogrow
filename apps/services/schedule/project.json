{
  "name": "schedule",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/services/schedule/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/services/schedule",
        "color": true,
        "command": "export TS_NODE_PROJECT='./tsconfig.app.json' && sls package"
      },
      "configurations": {
        "preview": {
          "fileReplacements": [
            {
              "replace": "apps/services/schedule/src/environments/environment.ts",
              "with": "apps/services/schedule/src/environments/environment.preview.ts"
            }
          ]
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/services/schedule/src/environments/environment.ts",
              "with": "apps/services/schedule/src/environments/environment.production.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/services/schedule",
        "color": true,
        "command": "export TS_NODE_PROJECT='./tsconfig.app.json' && sls offline start"
      },
      "configurations": {
        "preview": {
          "fileReplacements": [
            {
              "replace": "apps/services/schedule/src/environments/environment.ts",
              "with": "apps/services/schedule/src/environments/environment.preview.ts"
            }
          ]
        },
        "prod": {
          "fileReplacements": [
            {
              "replace": "apps/services/schedule/src/environments/environment.ts",
              "with": "apps/services/schedule/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/services/schedule",
        "color": true,
        "command": "export TS_NODE_PROJECT='./tsconfig.app.json' && sls deploy --verbose"
      },
      "configurations": {
        "preview": {
          "fileReplacements": [
            {
              "replace": "apps/services/schedule/src/environments/environment.ts",
              "with": "apps/services/schedule/src/environments/environment.preview.ts"
            }
          ]
        },
        "prod": {
          "fileReplacements": [
            {
              "replace": "apps/services/schedule/src/environments/environment.ts",
              "with": "apps/services/schedule/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "remove": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/services/schedule",
        "color": true,
        "command": "export TS_NODE_PROJECT='./tsconfig.app.json' && sls remove"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/services/schedule/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/services/schedule/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["type:service"]
}
